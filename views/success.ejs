<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login Success</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: #f5f5f5;
    }

    .output-box {
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
      text-align: center;
    }

    h1 {
      margin-bottom: 10px;
      color: #333;
    }

    p {
      font-size: 18px;
      color: #555;
    }
  </style>
</head>
<body>
  <div class="output-box">
    <h1>Login Successful</h1>
    <p id="userOutput"></p>
    <p id="passOutput"></p>
  </div>

  <script>
    // Read URL parameters
    const params = new URLSearchParams(window.location.search);
    const username = params.get('username');
    const password = params.get('password');

    // Display the values
    document.getElementById('userOutput').textContent = `Username: ${username}`;
    document.getElementById('passOutput').textContent = `Password: ${password}`;
  </script>
</body>
</html>
