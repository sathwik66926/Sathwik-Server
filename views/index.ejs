<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login - MLRITM</title>

  <link rel="icon" href="https://www.eduska.com/assets/user_logo/8e02d072d4deaf04235e7da8ae8e0818.jpg">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', sans-serif;
      background: url("https://xplusglobal.com/wp-content/uploads/2023/04/thumb-5.png") no-repeat center center fixed;
      background-size: cover;
      height: 100vh;
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100%;
    }

    .login-container, .success-container {
      background-color: rgba(255, 255, 255, 0.5);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      padding: 30px;
      border-radius: 5px;
      width: 380px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      text-align: center;
      border: 1px solid rgba(255, 255, 255, 0.2);
      display: none;
    }

    .login-container.active, .success-container.active {
      display: block;
    }

    .header {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      margin-bottom: 20px;
    }

    .header img {
      width: 50px;
      height: 50px;
    }

    .header h2 {
      margin: 0;
      font-size: 20px;
      color: black;
    }

    input[type="text"], input[type="password"] {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 6px;
      box-sizing: border-box;
    }

    button {
      width: 100%;
      padding: 10px;
      background-color: #0068e1;
      border: none;
      color: white;
      font-size: 16px;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #004ab0;
    }

    .output-box {
      font-size: 16px;
      color: #333;
      text-align: left;
    }

    .output-box p {
      margin: 10px 0;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- ðŸ”¹ Login Form Section -->
    <div class="login-container active" id="loginSection">
      <div class="header">
        <img src="https://www.eduska.com/assets/user_logo/8e02d072d4deaf04235e7da8ae8e0818.jpg" alt="MLRS Logo">
        <h2>WELCOME - MLRITM</h2>
      </div>

      <form id="loginForm">
        <input type="text" name="username" placeholder="User Name" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Log In</button>
      </form>
    </div>

    <!-- ðŸ”¹ Success Output Section -->
    <div class="success-container" id="successSection">
      <div class="header">
        <img src="https://www.eduska.com/assets/user_logo/8e02d072d4deaf04235e7da8ae8e0818.jpg" alt="MLRS Logo">
        <h2>LOGIN SUCCESSFUL</h2>
      </div>

      <div class="output-box">
        <p><strong>Username:</strong> <span id="outputUsername"></span></p>
        <p><strong>Password:</strong> <span id="outputPassword"></span></p>
      </div>
    </div>
  </div>

  <!-- ðŸ”¹ JavaScript to switch views and display data -->
  <script>
    const form = document.getElementById('loginForm');
    const loginSection = document.getElementById('loginSection');
    const successSection = document.getElementById('successSection');
    const outputUsername = document.getElementById('outputUsername');
    const outputPassword = document.getElementById('outputPassword');

    form.addEventListener('submit', function(e) {
      e.preventDefault();

      const username = form.username.value;
      const password = form.password.value;

      // Show values
      outputUsername.textContent = username;
      outputPassword.textContent = password;

      // Switch views
      loginSection.classList.remove('active');
      successSection.classList.add('active');
    });
  </script>
</body>
</html>
